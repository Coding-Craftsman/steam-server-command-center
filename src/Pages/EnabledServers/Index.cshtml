@page
@model steam_server_command_center.Pages.EnabledServers.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EnabledServer[0].GameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnabledServer[0].InstanceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnabledServer[0].InstalledPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnabledServer[0].IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EnabledServer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GameName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstanceName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.InstalledPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Manage Server</a> |
                <a asp-page="@item.EditPageRoute()" asp-route-id="@item.ID">Edit Configuration</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
