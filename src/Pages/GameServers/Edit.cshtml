@page
@model steam_server_command_center.Pages.GameServers.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>GameServer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameServer.ID" />
            <div class="form-group">
                <label asp-for="GameServer.SteamAppID" class="control-label"></label>
                <input asp-for="GameServer.SteamAppID" class="form-control" />
                <span asp-validation-for="GameServer.SteamAppID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameServer.Name" class="control-label"></label>
                <input asp-for="GameServer.Name" class="form-control" />
                <span asp-validation-for="GameServer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameServer.LogoUrl" class="control-label"></label>
                <input asp-for="GameServer.LogoUrl" class="form-control" />
                <span asp-validation-for="GameServer.LogoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
